mixin createProduct(product)
    .col-md-4
        .card#card
            img(src=`/img/${product.imageUrl}` alt=`${product.description}`).card-img-top#card-img-top
            .card-body#card-body
                h4.card-title#card-title
                    a(href=`/products/${product._id}`) #{product.name}
                                
                span.card-text.text-muted#card-text
                    i.fas.fa-lira-sign #{product.price}
                            
            .card-footer.text-center#card-footer                

                a(href=`/products/${product._id}`).btn.mr-2 Details 

                form(action='/cart' method='POST')
                    input(type="hidden" name="_csrf" value=`${csrfToken}`)
                    input(type='hidden' name='productId' value=`${product._id}`)
                    button(type='submit').btn.btn-outline-primary.btn-sm.ml-3 Add to Cart 
                     